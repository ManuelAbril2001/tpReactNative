en appjs
const Drawer = creatDrawerNavigator ();

export default class DrawerNavigatori extends Component {
    render (){
        return(
            <NavigationContainer>
            <Drawer.Navigator initialRouteName="Screen 1"/> 
                <Drawer.Screen name="Screen 1" component={Screen1}/>
                <Drawer.Screen name="Screen 2" component={Screen2}/>
            </Drawer.Navigator>
            </NavigationContainer>
        )
    }
}

