ejemplo

import React, {Component} from 'react';
import { StyleSheet, Button, Animated, Easing, Text, View, TextInput, TouchableOpacity, TouchableWithoutFeedback } from 'react-native';



export class Papelera extends Component {
    constructor(){
        super();
        this.state = {
            toValue: 1.5,
        }
    }

    position = new Animated.Value(10);
    resize = new Animated.Value(1);

    topDown = () => {
        Animated.timing(this.position,{
            toValue: 300,
            duration: 1000, 
            //un segundo
            useNativeDriver: false,
            //obligatorio
            easing: Easing.bounce,
        }).start();
    }

    toSize = () => {
        Animated.spring(this.resize,{
            toValue: this.state.toValue,
            friction: 16,
            tension: 10,
            useNativeDriver: false,
        }).start();
        this.setState({toValue: this.state.toValue==1? 1.5 : 1})
    }

    render(){
        return (
            <View>

             <Text>Papelera</Text>
             <Button title="Press to animate" onPress={this.topDown}/>
                
             <Animated.View style={{
                    top: this.position,
                    width: 150,
                    height: 150,
                    backgroundColor: 'red',
                }}>
                    <TouchableOpacity style={{flex:1}} onPress={this.topDown}/>
                </Animated.View>

                <Animated.View style={{
                    width: 150,
                    height: 150,
                    backgroundColor: 'blue',
                    transform: [
                        {scale: this.resize}
                    ]
                }}>
                    <TouchableOpacity style={{flex:1}} onPress={this.toSize}/>
                </Animated.View>
            </View>

        )

    }
}